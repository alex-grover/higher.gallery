{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "contracts#build": {
      "outputs": ["out"]
    },
    "wagmi": {
      "dependsOn": ["contracts#build"],
      "outputs": ["src/generated/wagmi.ts"]
    },
    "ponder#codegen": {
      "outputs": ["generated/schema.graphql"]
    },
    "web#codegen": {
      "dependsOn": ["ponder#codegen"],
      "outputs": ["src/generated/ponder.ts"]
    },
    "web#build": {
      "dependsOn": ["codegen"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["PONDER_URL"]
    },
    "lint": {},
    "web#lint": {
      "dependsOn": ["codegen"],
      "env": ["PONDER_URL"]
    },
    "prettier": {},
    "stylelint": {},
    "typecheck": {},
    "ponder#typecheck": {
      "dependsOn": ["wagmi"]
    },
    "web#typecheck": {
      "dependsOn": ["codegen", "wagmi"]
    },
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "ponder#dev": {
      "dependsOn": ["ponder#wagmi"]
    },
    "web#dev": {
      "dependsOn": ["web#codegen", "web#wagmi"],
      "env": ["PONDER_URL"]
    }
  }
}
